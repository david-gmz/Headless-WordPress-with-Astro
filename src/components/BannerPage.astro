---
const {title, description} = Astro.props;
---

<section class="py-20 text-center">
    <div class="container mx-auto px-4 bg-im">
        <h1 class="text-5xl font-bold mb-6">{title}</h1>
        <p
            class="text-xl text-muted-foreground max-w-2xl mx-auto motion-preset-typewriter-[61] motion-duration-[30s]">
            {description}
        </p>
    </div>
</section>
