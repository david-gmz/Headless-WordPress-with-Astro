---
import { Image } from "astro:assets";
const { bitacora } = Astro.props;
---

<div class="lg:w-1/3 px-2.5 mb-5">
    <article
        class="rounded-lg bg-slate-200 dark:bg-slate-800 shadow-lg p-5 h-full flex flex-col items-start justify-between">
        <div>
            {
                bitacora.featuredImage && (
                    <Image
                        class="w-full object-cover aspect-2/3 mb-5"
                        alt={
                            bitacora.featuredImage.node.altText ??
                            bitacora.title
                        }
                        src={bitacora.featuredImage.node.sourceUrl}
                        width={600}
                        height={400}
                    />
                )
            }
            <div
                class="text-slate-900 dark:text-white mb-6 flex items-end justify-between">
                <h2 class="text-xl font-bold">
                    {bitacora.title}
                </h2>
                <p>
                    $
                    {
                        new Intl.NumberFormat("en-US").format(
                            bitacora.bitacoraFields.price
                        )
                    }
                </p>
            </div>
        </div>
        <a
            class="inline-block bg-slate-600 text-slate-200 rounded-md px-6 py-3 hover:bg-slate-500"
            href={`/bitacoras/${bitacora.slug}`}>
            View bitacora
        </a>
    </article>
</div>
