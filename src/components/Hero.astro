---
import Logo from "./ui/Logo.astro";
import Wheel from "./ui/Wheel.astro";
---

<section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <!-- Left Column - Text Content -->
            <div
                class="motion-safe:animate-fade-up motion-safe:animate-duration-1000 motion-safe:animate-ease-out">
                <h1
                    class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
                    Vida Nomade <br />en <span class="gradient-heading"
                        >Bambucleta</span
                    >
                </h1>
                <p
                    class="text-xl text-muted-foreground max-w-2xl mx-auto motion-preset-slide-up-lg">
                    Explorando el mundo sobre dos ruedas, compartiendo
                    historias, tutoriales y reflexiones del camino.
                </p>
                <div class="space-x-4 mt-8">
                    <Wheel
                        class="inline-block w-16 h-16 opacity-50 motion-preset-spin motion-duration-[40s]"
                    />
                    <Wheel
                        class="inline-block w-16 h-16 opacity-50 motion-preset-spin motion-duration-[40s]"
                    />
                </div>
            </div>

            <!-- Right Column - Image -->
            <div class="relative">
                <div class="aspect-w-4 aspect-h-3">
                    <Logo
                        class="object-cover object-center w-full h-full opacity-20"
                    />
                </div>
                <div
                    class="absolute -bottom-4 -right-4 w-20 h-20 bg-cyan-300 dark:bg-purple-900 rounded-full"
                    style="animation-delay: 1s">
                    <Wheel
                        class="w-20 h-20 opacity-30 motion-preset-spin motion-duration-[60s]"
                    />
                </div>
                <div
                    class="absolute -top-4 -left-4 w-16 h-16 bg-emerald-400 dark:bg-cyan-700 rounded-full">
                    <Wheel
                        class="w-16 h-16 opacity-30 motion-preset-spin motion-duration-[60s]"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
