---
import { Image } from "astro:assets";
const { post } = Astro.props;
---

<div class="lg:w-1/3 px-2.5 mb-5">
    <article
        class="rounded-lg bg-slate-200 dark:bg-slate-800 shadow-lg p-5 h-full flex flex-col items-start justify-between">
        <div>
            {
                post.featuredImage && (
                    <Image
                        class="w-full object-cover aspect-2/3 mb-5"
                        alt={post.featuredImage.node.altText ?? post.title}
                        src={post.featuredImage.node.sourceUrl}
                        transition:name={`img-${post.slug}`}
                        width={600}
                        height={400}
                    />
                )
            }
            <h2
                class="text-slate-900 dark:text-white text-xl font-bold mb-5"
                transition:name={`title-${post.slug}`}
                set:html={post.title}
            />
            <p class="text-slate-500 dark:text-slate-400 mb-6">
                {post.excerpt.replace(/<(.|\n)*?>/g, "")}
            </p>
        </div>
        <a
            class="inline-block bg-slate-600 text-white rounded-md px-6 py-3 hover:bg-slate-500"
            href={`${post.slug}`}>Read More</a
        >
    </article>
</div>
