---
import { Image } from "astro:assets";
interface Props {
    title: string;
    excerpt?: string;
    featuredImage: { srcUrl: string; altText: string };
    url: string;
    date: Date;
}
const { title, excerpt, featuredImage, url, date } = Astro.props;
---

<a href=`${url}` class="grid grid-rows-subgrid group h-full">
    <article
        class="bg-card p-6 rounded-lg shadow-md transition-transform hover:scale-105 h-full flex flex-col">
        {
            featuredImage && (
                <Image
                    class="w-full object-cover aspect-2/3 mb-5"
                    src={featuredImage.srcUrl}
                    alt={featuredImage.altText ?? title}
                    width={600}
                    height={400}
                />
            )
        }
        <time
            datetime={date.toISOString()}
            class="text-sm text-gray-500 dark:text-gray-400">
            {
                new Date(date).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "long",
                    day: "numeric"
                })
            }
        </time>
        <h3
            class="text-xl font-semibold mb-2 group-hover:text-accent"
            transition:name={`title-${url}`}>
            {title}
        </h3>
        <div class="text-muted-foreground flex-grow">
            <p>{excerpt}</p>
        </div>
        <button class="btn btn-blue">Leer m√°s <span>&rarr;</span></button>
    </article>
</a>
