---
import ThemeToggle from "@components/ThemeToggle.astro";
import Logo from "@components/ui/Logo.astro";
import NavLinks from "./NavLinks.astro";
---

<nav
    class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 fixed w-full z-20 top-0 start-0">
    <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <Logo class="w-14 h-auto" />
            <span
                class="hidden md:inline-block self-center text-2xl font-semibold whitespace-nowrap site-tile"
                >Bambucleta Nomade</span
            >
        </a>
        <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
            <ThemeToggle />
            <button
                id="mobile-menu-button"
                data-collapse-toggle="mobile-menu-panel"
                type="button"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                aria-controls="mobile-menu-panel"
                aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg
                    class="w-5 h-5"
                    id="menu-icon"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 17 14">
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 1h15M1 7h15M1 13h15"></path>
                </svg>
            </button>
        </div>
        <div
            class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
            id="mobile-menu-panel">
            <ul
                class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:bg-transparent md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:bg-gray-800 md:dark:bg-transparent dark:border-gray-700">
                <NavLinks />
            </ul>
        </div>
    </div>
</nav>

<script>
    const button = document.getElementById("mobile-menu-button");
    const panel = document.getElementById("mobile-menu-panel");

    let isOpen = false;

    function toggleMenu() {
        isOpen = !isOpen;
        if (!panel) return;
        if (isOpen) {
            button!.ariaExpanded = "true";
            panel.classList.remove("hidden");
        } else {
            button!.ariaExpanded = "false";
            panel.classList.add("hidden");
        }
    }

    button?.addEventListener("click", toggleMenu);

    // Close menu when clicking outside
    document.addEventListener("click", event => {
        const target = event.target as HTMLElement;
        if (isOpen && !button?.contains(target) && !panel?.contains(target)) {
            toggleMenu();
        }
    });
</script>

<style>
    /* Prevent body scroll when menu is open */
    :global(body.menu-open) {
        overflow: hidden;
    }
</style>
