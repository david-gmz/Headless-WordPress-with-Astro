---
interface RelatedPost {
    title: string;
    excerpt: string;
    slug: string;
    category: string;
    date: string;
}

interface Props {
    posts: RelatedPost[];
}

const { posts } = Astro.props;
---

<section class="bg-muted/50 py-16">
    <div class="container">
        <h2 class="text-3xl font-bold mb-8 gradient-heading">Artículos relacionados</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                posts.map(post => (
                    <article class="bg-card rounded-lg shadow-md overflow-hidden">
                        <div class="p-6">
                            <p class="text-sm text-muted-foreground mb-2">
                                {post.category} • {post.date}
                            </p>
                            <h3 class="text-xl font-semibold mb-2">
                                <a href={post.slug} class="hover:text-accent">
                                    {post.title}
                                </a>
                            </h3>
                            <p class="text-muted-foreground">{post.excerpt}</p>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
