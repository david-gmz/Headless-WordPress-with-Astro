---
interface Props {
    title: string;
    date: Date;
    minutesRead: string;
}

const { title, date, minutesRead } = Astro.props;
---

<header class="relative py-16 bg-muted/50">
    <div class="container text-center">
        <div class="max-w-3xl">
            <h1 class="text-4xl font-bold mb-4">{title}</h1>
            <p class="text-sm text-muted-foreground mb-3">
                {
                    date.toLocaleDateString("es-mx", {
                        year: "numeric",
                        month: "long",
                        day: "numeric"
                    })
                } â€¢ Tiempo de lectura: {minutesRead}
            </p>
        </div>
    </div>
</header>
